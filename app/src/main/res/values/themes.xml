<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AppTarefas" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.AppTarefas.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.AppTarefas.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.AppTarefas.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="DefaultButton">
        <!-- cor de fundo via tint (pink definido em colors.xml) -->
        <item name="android:backgroundTint">@color/pink</item>
        <item name="android:backgroundTintMode">src_atop</item>

        <!-- texto -->
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:letterSpacing">0.05</item>

        <!-- padding interno -->
        <item name="android:paddingStart">64dp</item>
        <item name="android:paddingEnd">64dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>

        <!-- elevação / sombra -->
        <item name="android:elevation">4dp</item>
        <item name="android:translationZ">2dp</item>

        <!-- ripple (tapping feedback) -->
        <item name="android:foreground">?attr/selectableItemBackgroundBorderless</item>

        <!-- centralização no ConstraintLayout -->
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="WhiteEditText">
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:backgroundTint">@color/white</item>
    </style>

    <style name="ViewDivider">
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:background">@color/grey_500</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_width">0dp</item>
    </style>
</resources>